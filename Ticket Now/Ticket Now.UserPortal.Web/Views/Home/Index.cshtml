    <script>
        function getRGBColor(image)
        {
            var color = colorThief.getColor(image);

            return "rgb(" + color + ")";
        }

        function addBackgroundColor(element, color)
        {
            element.css("background-color", color);
        }

        function rgb2hex(rgb) {
            if (rgb.search("rgb") == -1) {
                return rgb;
            } else {
                rgb = rgb.match(/^rgba?\((\d+),\s*(\d+),\s*(\d+)(?:,\s*(\d+))?\)$/);
                function hex(x) {
                    return ("0" + parseInt(x).toString(16)).slice(-2);
                }
                return "#" + hex(rgb[1]) + hex(rgb[2]) + hex(rgb[3]);
            }
        }

        function getContrastYIQ(hexcolor) {
            var r = parseInt(hexcolor.substr(0, 2), 16);
            var g = parseInt(hexcolor.substr(2, 2), 16);
            var b = parseInt(hexcolor.substr(4, 2), 16);
            var yiq = ((r * 299) + (g * 587) + (b * 114)) / 1000;
            return (yiq >= 128) ? 'black' : 'white';
        }

        var colorThief = new ColorThief();

        $(".mdl-card__media").each(function ()
        {
            var $mediaContainer = $(this);
            var $mediaImages = $("img", this);
            
            if($mediaImages.length == 1)
            {
                var color = getRGBColor($mediaImages[0]);
                addBackgroundColor($mediaContainer, color);
            }
        });
